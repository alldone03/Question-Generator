# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION EXAMPLE
# ==========================================
# Salin file ini ke .env dan ubah nilainya sesuai server Anda.

# --- Database Configuration (MySQL) ---
MYSQL_DATABASE=itsquizz_db
MYSQL_ROOT_PASSWORD=ganti_dengan_root_password_kuat
MYSQL_USER=itsquizz_user
MYSQL_PASSWORD=ganti_dengan_password_user_kuat

# --- Backend Configuration ---
# Format: mysql+pymysql://<user>:<password>@db:3306/<database_name>
DATABASE_URL=mysql+pymysql://itsquizz_user:ganti_dengan_password_user_kuat@db:3306/itsquizz_db
SECRET_KEY=ganti_dengan_random_string_sangat_panjang_dan_aman
SESSION_TYPE=filesystem
RUN_SEEDER=false

# --- CORS & Security ---
# Tambahkan alamat IP server atau domain produksi Anda
# Contoh: http://yourdomain.com,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost,http://<IP_SERVER_ANDA>

# --- Frontend Configuration (Build-time) ---
# Gunakan "/" jika frontend dan backend berada di server yang sama dengan Nginx Proxy
VITE_API_URL=/
